{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2021",
        "outDir": "./dist",
        "baseUrl": "./",
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts", "test/**/*.spec.ts"],
    "exclude": ["node_modules"]
}
